  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Chrome",
      "port": 4200,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Docker: Attach to Node",
      "remoteRoot": "/usr/src/app",
      "address": "localhost",
      "port": 4200,
      "localRoot": "${workspaceFolder}"
    },  
    {
      "name": "ng serve",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}",
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:9876/debug.html"
    }
  ]
}
